        padding: 0.4rem 0.8rem;
        font-weight: 500;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        opacity: 0.9;
    }
    
    @media (max-width: 768px) {
        .canvas-footer .d-inline-flex {
            gap: 0.5rem;
        }
        
        .canvas-footer .badge {
            font-size: 0.7rem;
            padding: 0.3rem 0.6rem;
        }
    }
</style>

